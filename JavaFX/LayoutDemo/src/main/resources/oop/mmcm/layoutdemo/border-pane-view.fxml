<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="oop.mmcm.layoutdemo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <top>
        <VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
            <Label fx:id="welcomeText" text="Registration"/>
        </VBox>
    </top>

    <left>
        <Label text="Left Region"/>
    </left>

    <center>
        <VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
            <TextField fx:id="firstName" promptText="first name..."/>

            <TextField fx:id="lastName" promptText="last name..."/>

            <DatePicker fx:id="birthDate"/>

            <TextField fx:id="email" promptText="email"/>

            <PasswordField fx:id="password" promptText="password"/>

            <PasswordField fx:id="confirmPassword" promptText="password"/>
        </VBox>
    </center>

    <right>
        <Label text="Right Region"/>
    </right>

    <bottom>
        <HBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
            <Button text="Save"/>
            <Button text="Cancel"/>
        </HBox>
    </bottom>
</BorderPane>
