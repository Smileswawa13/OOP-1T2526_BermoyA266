<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.mmcm.bidirectionalbinding.controllers.UserController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField fx:id="emailField" promptText="email" />
   <PasswordField fx:id="passwordField" promptText="password" />

   <ButtonBar prefHeight="40.0" prefWidth="200.0">
     <buttons>
         <Button onAction="#onLogin" text="Login" />
         <Button onAction="#onClose" text="Close" />
     </buttons>
   </ButtonBar>
</VBox>
